<h1>Welcome <%= current_user.first_name %></h1>

<%= button_to "Log Out", destroy_user_session_path, method: :delete, class:'lgbtn' %>
<h2>Your Accounts</h2>
<div class='profileimg'></div>
<ul>
  <% @accounts.each do |account| %>
    <li>
      <h2 class='gametag'><%= account.gamertag %></h2><br />
      <%= link_to "Play!", games_path(account) %> <br/>
      <%= link_to "Show Account Info", account_path(account) %><br/>
      <%= link_to "Edit Account", edit_account_path(account) %><br/>
      <%= link_to "Delete Account", account, method: :delete %><br/>
    </li>
  <% end %>
  <%= link_to "Add New Account",  new_account_path %>
</ul>
