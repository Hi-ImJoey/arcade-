<h1>Welcome <%= current_user.first_name %></h1>

<%= button_to "Log Out", destroy_user_session_path, method: :delete %>
<h2>Your Accounts</h2>

<ul>
  <% @accounts.each do |account| %>
    <li>
      <%= account.gamertag %> <br />
      <%= link_to "Show Account Info", account_path(account) %>
      <%= link_to "Edit Account", edit_account_path(account) %>
      <%= link_to "Delete Account", account, method: :delete %>
    </li>
  <% end %>
  <%= link_to "Add New Account",  new_account_path %>
</ul>
