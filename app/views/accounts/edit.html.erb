<h1>Edit Account</h1>
<%= form_with(model: @account, local: true) do |f| %>
  <div class="field">
    <%= f.label :gamertag %>
    <%= f.text_field :gamertag, required: true, placeholder: "Enter your Gamertag" %>
  </div>
  <div class="field">
    <%= f.label :hometown %>
    <%= f.text_field :hometown, required: true, placeholder: "Enter your Hometown" %>
  </div>
  <div class="field">
    <%= f.label :favorite_food %>
    <%= f.text_field :favorite_food, required: true, placeholder: "Enter your Favorit Food" %>
  </div>
  <div class="field">
    <%= f.label :bio %>
    <%= f.text_field :bio, required: true, placeholder: "Enter your bio" %>
  </div>
  <%= f.submit %>
<% end %>
