<h2 class='signuptext'>Sign up</h2>
<h2 class='sutext'>ProArcade</h2>

<div class='arcade'></div>
<div class='signonimg'></div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


    <%= f.text_field :first_name, placeholder: 'first name', class:'firstfield' %>
    <%= f.text_field :last_name, placeholder:'last name', class:'lastfield' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'email', class:'suemail' %>


  <div class="field">
    <div class='gone'>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters min)</em>
    <% end %><br />
    </div>
    <%= f.password_field :password, autocomplete: "new-password", placeholder:'password (6 char. min.)', class:'pass' %>
  </div>


    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'confirm password', class:'cpass' %>


  <div class="actions">
    <%= f.submit "Sign up", class:'button' %>
  </div>
<% end %>

<% render "devise/shared/links", class:'gone' %>

<div class='border'></div>
